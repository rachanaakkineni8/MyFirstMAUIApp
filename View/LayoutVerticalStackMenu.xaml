<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMAUIApp.ViewModel.LayoutVerticalStackPage"
             Title="{Binding Title}">
    <VerticalStackLayout>
        <BoxView Color=" Red"
                 WidthRequest="100"
                 HeightRequest=" 100"
                 HorizontalOptions="Center"
                 VerticalOptions="Start"/>

        <BoxView Color=" Green"
                WidthRequest="100"
                HeightRequest=" 100"
                HorizontalOptions="Center"/>


        <BoxView Color=" Blue"
                WidthRequest="100"
                HeightRequest=" 100"
                HorizontalOptions="Center"/>


         <BoxView Color=" Purple"
                WidthRequest="100"
                HeightRequest=" 100"
                HorizontalOptions="End"/>



    </VerticalStackLayout>
</ContentPage>