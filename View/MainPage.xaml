<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMAUIApp.View.MainPage"
             Title="{Binding Title}">
    <Grid Padding = "16,24,16,16"
        RowSpacing = "6"
        ColumnSpacing="12">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>

    <Button Grid.Row="0"
            Grid.Column ="0"
            Text="Button 0, 0"
            Style="(StaticResource TitleButton)" />
    <Button Grid.Row="0"
        Grid.Column ="1"
        Text="Button 0, 1"
        Style="(StaticResource TitleButton)" />
    <Button Grid.Row="1"
        Grid.Column ="0"
        Text="Button 1, 0"
        Style="(StaticResource TitleButton)" />
    <Button Grid.Row="1"
        Grid.Column ="1"
        Text="Button 1, 1"
        Style="(StaticResource TitleButton)" />
    <Button Grid.Row="2"
        Grid.Column ="0"
        Text="Button 2, 0"
        Style="(StaticResource TitleButton)" />
    </Grid>
</ContentPage>