<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMAUIApp.View.LayoutFlex"
             Title="{Binding Title}">

    <FlexLayout Direction="Row"
                JustifyContent="Center"
                AlignItems="Center">

        <VerticalStackLayout Margin="5"
                             WidthRequest="100">

            <BoxView Color="Red"
                     HeightRequest="50"
                     WidthRequest="50"/>

            <Label Text="Red"
                   HorizontalOptions="Start"
                   Margin="25,5,0,0" />

        </VerticalStackLayout>

        <VerticalStackLayout Margin="5"
                             WidthRequest="100">

            <BoxView Color="Green"
                     HeightRequest="50"
                     WidthRequest="50"/>

            <Label Text="Green"
                   HorizontalOptions="Center"
                   Margin="-10,5,0,0" />

        </VerticalStackLayout>

        <VerticalStackLayout Margin="5"
                             WidthRequest="100">

            <BoxView Color="Blue"
                     HeightRequest="50"
                     WidthRequest="50"/>

            <Label Text="Blue"
                   HorizontalOptions="Center"
                   Margin="-25,5,0,0" />

        </VerticalStackLayout>

    </FlexLayout>

</ContentPage>


